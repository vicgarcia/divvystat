{
    "name": "dvmap",
    "version": "4.0",
    "authors": [ "Vic Garcia <vic.garcia@outlook.com>" ],
    "private": true,

    "dependencies" : {
        "requirejs": "2.1.15",
        "jquery": "2.1.1",
        "blockui": "2.65",
        "leaflet": "0.7.3",
        "Leaflet.awesome-markers": "2.0.1",
        "leaflet.fullscreen": "1.1.3",
        "raphael": "2.1.2",
        "morrisjs": "0.5.1"
    },

    "install" : {
        "path" : {
            "png": "public/src",
            "css": "public/src",
            "js": "templates/js/lib"
        },
        "sources": {
            "leaflet.fullscreen": [
                "bower_components/leaflet.fullscreen/Control.FullScreen.js",
                "bower_components/leaflet.fullscreen/Control.FullScreen.css",
                "bower_components/leaflet.fullscreen/icon-fullscreen-2x.png",
                "bower_components/leaflet.fullscreen/icon-fullscreen.png"
            ],
            "Leaflet.awesome-markers": [
                "bower_components/Leaflet.awesome-markers/dist/**"
            ],
            "morris": [
                "bower_components/morris/morris.js",
                "bower_components/morris/morris.css"
            ],
            "requirejs-text": []
        }
    },

    "ignore": [
        "**/.*",
        "node_modules",
        "bower_components",
        "test",
        "tests"
    ]
}
